! Xcursor -------------------------------------------------------------------

/* ---SETUP--- 1 */

!urxvt.font:             xft:Bitstream Vera Sans Mono:pixelsize=12:autohint=true

/* DejaVu Sans Mono */
urxvt.font:			xft:DejaVu Sans Mono-9
urxvt*boldFont:		xft:DejaVu Sans Mono-9:style=bold
urxvt*italicFont:	xft:DejaVu Sans Mono-9:style=italic

!Monospace
!URxvt*font:                    xft:Monospace:pixelsize=13:antialias=true:hinting=true
!URxvt*boldFont:                xft:Monospace:pixelsize=13:antialias=true:bold:hinting=true
!URxvt*italicFont:              xft:Monospace:pixelsize=13:antialias=true:italic:autohint=true:hinting=true
!URxvt*bolditalicFont:          xft:Monospace:pixelsize=13:antialias=true:bold:italic:autohint=true:hinting=true


!URxvt*font: xft:Monospace:pixelsize=12
!URxvt*boldFont: xft:Monospace:pixelsize=12


!-- Xft settings -- !
Xft.autohint:	0
xft.lcdfilter:	lcddefault
Xft.hintstyle:	hintfull
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    1
!Xft.hinstyle:   hintslight

! -- Fonts -- !
!URxvt.font:		xft:droid sans:medium:pixelsize=11
!URxvt.boldFont:	xft:droid sans:medium:pixelsize=11

urxvt.termName:         rxvt
URxvt.depth: 			32
URxvt.background: 		rgba:1111/1111/1111/dddd
URxvt*transparent:		false
URxvt*shading:			40
urxvt.foreground:       #cccccc
urxvt.scrollBar:        false
urxvt.perl-lib:         /usr/lib/urxvt/perl/
urxvt.perl-ext-common:  default,matcher
urxvt.urlLauncher:      /opt/mozilla/bin/firefox
urxvt.matcher.button:   1
URxvt.perl-ext-common:  default,tabbed	//Activa la opción de pestañas.
URxvt.tabbed.tabbar-fg: 7
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    2	//Active font color.
URxvt.tabbed.tab-bg:    0
URxvt.perl-ext:      	default,url-select
URxvt.keysym.M-u:    	perl:url-select:select_next
URxvt.urlLauncher:   	firefox
URxvt.underlineURLs: 	true
